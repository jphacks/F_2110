<div class="user-index-page">
  <%= render "partial/navbar" %>

  <div class="swipe">
    <div class="swipe--status">
      <i class="fa fa-times"></i>
      <i class="fa fa-heart"></i>
    </div>

    <div class="swipe--cards">
        <div class="swipe--card">
            <div class="profile-default-img"></div>
            <%= image_tag @user, class: "profile-img",width: '80%' %>
        </div>
    </div>

    <div class="swipe--buttons">
      <%= link_to "/", class: "fas-item fas-link" do %>
      <button id="start"><i class="fas fa-home fa-2x home-color"></i></button>
      <% end %>
      <%= link_to "/users", class: "fas-item fas-link", data: {"turbolinks" => false} do %>
      <button id="retry"><i class="fas fa-reply fa-2x"></i></button>
      <% end %>
    </div>
  </div>

</div>
